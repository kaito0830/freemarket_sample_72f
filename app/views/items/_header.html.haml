.header
  .header__inner
    .header__inner__main
      .header__inner__main__icon
        %h1
          = link_to root_path do
            = image_tag '/logo/logo.png'
      .header__inner__main__searchBox
        = form_with(url: search_items_path, local: true, method: :get) do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "header__inner__main__searchBox__input"
          = image_submit_tag "/icon/icon-search 1.png", class: "header__inner__main__searchBox__submit"
    .header__inner__nav
      %ul{ class: 'header__inner__nav__listLeft' }
        %li{ class: 'header__inner__nav__listLeft__item header__inner__nav__listLeft__item--first' }
          = link_to '商品一覧', items_path
        %li{ class: 'header__inner__nav__listLeft__item' } カテゴリー
        %li{ class: 'header__inner__nav__listLeft__item' } ブランド
      %ul{ class: 'header__inner__nav__listRight' }
        - if user_signed_in?
          %li{ class: 'header__inner__nav__listRight__item' }
            = link_to user_path(current_user) do
              マイページ
          %li{ class: 'header__inner__nav__listRight__item header__inner__nav__listRight__item--last' }
            = link_to destroy_user_session_path, method: 'delete' do
              ログアウト
        - else
          %li{ class: 'header__inner__nav__listRight__item' }
            = link_to new_user_session_path do
              ログイン
          %li{ class: 'header__inner__nav__listRight__item header__inner__nav__listRight__item--last' }
            = link_to new_user_registration_path do
              新規登録
              