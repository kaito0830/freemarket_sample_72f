.wrapper
  .header
    .image 
      = image_tag "/logo/logo.png", width:'185px', height:'49px'
    .progress-bar
  .register-main
    .register-container
      .register-head 商品送付先情報
      .register-form
        .register-form__content
          = form_for @address do |f|
            = render "devise/shared/error_messages", resource: @user

            .form-group
              = f.label :"発送元の氏名(全角)"
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :shipping_first_name, placeholder: "例) 山田"
                = f.text_field :shipping_last_name, placeholder: "例) 太郎"
            .form-group
              = f.label :"お名前(カナ)"
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :shipping_first_name_kana, placeholder: "例) ヤマダ"
                = f.text_field :shipping_last_name_kana, placeholder: "例) タロウ"

            .form-group
              = f.label :郵便番号
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :zipcode, placeholder: "例) 5420076(数字のみ入力)"

            .form-group
              = f.label :都道府県
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :prefecture, placeholder: "例) 大阪府"

            .form-group
              = f.label :市区町村
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :city, placeholder: "例) 大阪市中央区難波"
            
            .form-group
              = f.label :番地
              %span.form-require 必須
              %br/
              .input-field
                = f.text_field :street, placeholder: "例) 5丁目1-60"

            .form-group
              = f.label :"建物名(部屋番号含む)"
              %span.form-require 任意
              %br/
              .input-field
                = f.text_field :room, placeholder: "例) なんばskyo 15F"
            
            .form-group
              = f.label :電話番号
              %span.form-require 任意
              %br/
              .input-field
                = f.telephone_field :phone_number, placeholder: "例) ハイフンはなしで記入"
                
            .form-group
              %p.info-text2 ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
            .form-group
              .action
                = f.submit "登録する"
  .register-footer