.content-container
  .content-container__header
    %h1
      =  link_to root_path do
        =  image_tag "/logo/logo-white.png"
  .content-container__main
    .content-container__main__body
      %h2.body-chapter 購入確認画面
.content__credit-cards-purchase
  %h2 購入内容確認
  %ul.content__credit-cards-purchase__item-information
    - @itemPics.each_with_index do |itemPic, i|
      - if i == 0
        %li{class: "pic#{i}"}
          %img{src: "#{itemPic.image_url}"}
      - else
        %li{class: "pic#{i}", style: "display: none;"}
          %img{src: "#{itemPic.image_url}"}
  %ul.thumb
    - @itemPics.each_with_index do |itemPic, i|
      %li{class: "thumb#{i}"}
        %img{src: "#{itemPic.image_url}"}
  :javascript
    $(function(){
          $('.thumb li').click(function(){
              var class_name = $(this).attr("class"); //クリックしたサムネイルのclass名を取得
              var num = class_name.slice(5); //class名の末尾の数字を取得
              $('.main li').hide(); //メインの画像を全て隠す
              $('.pic' + num).fadeIn(); //クリックしたサムネイルに対応するメイン画像を表示
          });
      });
  %p 
    = @item.name
  %br
  %h2 支払金額確認
  %p
    ¥ 
    = @item.price
    （ 送料税込み ）
  %br
  .content__credit-cards-purchase__payment-information
    %h3 支払方法確認
    - if @default_card_information.blank?
      %br /
    - else
      = "**** **** **** " + @default_card_information.last4
      %br
      - exp_month = @default_card_information.exp_month.to_s
      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
      = exp_month + " / " + exp_year
    %br
    = link_to "カード変更", card_index_path, class: "purchase__info--item__card"
    = form_tag  pay_item_purchase_path(@item.id,@card.id), method: :post do
      %button 購入確定

